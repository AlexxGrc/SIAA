@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>
@model PagedList.IPagedList<SIAAPI.Models.Comercial.EncDevolucionR>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
            ViewBag.Title = "IndexDevolucionR";
            Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Lista de Devoluciones de Ventas</h3>
<hr />

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <div>
                        Elementos por página: @Html.DropDownList("pageSize")
                        Divisa: @Html.DropDownList("Divisa")
                        Status: @Html.DropDownList("Status")
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
                      
</div>

                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>

                @Html.ActionLink("Devolucion", "Index", new { sortOrder = ViewBag.DevolucionSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Fecha")
            </th>

            <th>

                @Html.ActionLink("Cliente", "Index", new { sortOrder = ViewBag.ClienteSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Almacen")
            </th>
            <th>
                @Html.Label("Forma de Pago")
            </th>

            <th>
                @Html.Label("Método de Pago")
            </th>

            <th>
                @Html.Label("Condiciones de Pago")
            </th>
            <th>
                @Html.Label("Divisa")
            </th>
            <th>
                @Html.Label("Tipo de Cambio")
            </th>

            <th>
                @Html.Label("Subtotal")
            </th>
            <th>
                @Html.Label("IVA")
            </th>
            <th>
                @Html.Label("Total")
            </th>


            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            if (item.Status.Equals("Cancelado"))
            {
                <tr class="danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.IDDevolucionR)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Clientes.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.c_FormaPago.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.c_MetodoPago.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CondicionesPago.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.c_Moneda.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCambio)
                    </td>

                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                        @Html.ActionLink("Detalles", "DetailsDevolucionR", new { id = item.IDDevolucionR }, new { @class = "btn btn-default btn-xs" })
                        @*@if (item.Status.Equals("Activo"))
                            {
                                    @Html.ActionLink("Cancelar", "CancelarDevolucion", new { id = item.IDDevolucionR }, new { @class = "btn btn-danger btn-xs" })
                                }*@

                        @*@Html.ActionLink("PDF", "PdfRequisicion", new { id = item.IDDevolucionR }, new { @class = "btn btn-primary btn-xs" })*@

                    </td>
                </tr>
            }
            else
            {
                <tr>
                    @if (item.Status.Equals("Activo"))
                    {
                        <td class="success">
                            @Html.DisplayFor(modelItem => item.IDDevolucionR)
                        </td>
                    }
                    else if (item.Status.Equals("Devuelto"))
                    {
                        <td class="warning">
                            @Html.DisplayFor(modelItem => item.IDDevolucionR)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Clientes.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.c_FormaPago.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.c_MetodoPago.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CondicionesPago.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.c_Moneda.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCambio)
                    </td>

                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                        @Html.ActionLink("Detalles", "DetailsDevolucionR", new { id = item.IDDevolucionR }, new { @class = "btn btn-default btn-xs" })
                        @*@if (item.Status.Equals("Activo"))
                            {
                                @Html.ActionLink("Cancelar", "CancelarDevolucion", new { id = item.IDDevolucionR }, new { @class = "btn btn-danger btn-xs" })
                            }*@

                        @Html.ActionLink("PDF", "PdfRequisicion", new { id = item.IDDevolucionR }, new { @class = "btn btn-primary btn-xs" })

                    </td>
                </tr>
            }
        }

    </table>
    </div>
    <div class="table-responsive">
        <table class="table table-striped" width="50">
            <tr>
                <th class="col-lg-1">
                    Moneda Origen
                </th>
                <th class="col-lg-1">
                    Subtotal
                </th>
                <th class="col-lg-1">
                    IVA
                </th>
                <th class="col-lg-1">
                    Total
                </th>
                <th class="col-lg-1">
                    Total en Pesos Mexicanos
                </th>
            </tr>
            @foreach (var itemresumen in ViewBag.sumatoria)
            {

                <tr>
                    <td class="col-lg-1">
                        @itemresumen.MonedaOrigen
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.Subtotal)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.IVA)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.Total)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.TotalenPesos)
                    </td>

                </tr>
            }
        </table>
    </div>
    <br />
    @*Paginación*@
    @using (Html.BeginForm("IndexDevolucionR", "EncRemision", FormMethod.Get, new { id = "pageSizeForm" }))
            {
        <div class="pager">
            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

            @Model.Count de @Model.TotalItemCount elementos

            @Html.PagedListPager(Model, page => Url.Action("IndexDevolucionR", new
               {
                   page,
                   sortOrder = ViewBag.CurrentSort,
                   currentFilter = ViewBag.CurrentFilter,
                   searchString = ViewBag.CurrentFilter,
                   pageSize = ViewBag.psize
               }))

        </div>
    }
    @*Paginación*@
