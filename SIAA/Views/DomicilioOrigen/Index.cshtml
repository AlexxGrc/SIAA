                    </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@


<table class="table">
    <tr>
        <th>
            @Html.ActionLink("RFC", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Nombre Remitente", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Calle", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Num. Exterior", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Num. Interior", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Pais", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Estado", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Municipio", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Localidad", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Código Postal", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Colonia", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {


        SIAAPI.Models.Administracion.Paises pais = new SIAAPI.Models.Administracion.PaisesContext().Paises.Find(item.IDPais);
        SIAAPI.Models.Administracion.Estados estado = new SIAAPI.Models.Administracion.EstadosContext().Estados.Find(item.IDEstado);
        SIAAPI.Models.CartaPorte.c_Municipio municipio = new SIAAPI.Models.CartaPorte.c_MunicipioContext().municipio.Find(item.IDMunicipio);
        SIAAPI.Models.CartaPorte.c_Localidad localidad = new SIAAPI.Models.CartaPorte.c_LocalidadContext().Localidad.Find(item.IDLocalidad);
        SIAAPI.Models.CartaPorte.c_Colonia colonia = new SIAAPI.Models.CartaPorte.c_ColoniaContext().colonias.Find(item.IDColonia);

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RFCRemitente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRemitente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumExt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumInt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => pais.c_Pais) | @Html.DisplayFor(modelItem => pais.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => estado.c_Estado) | @Html.DisplayFor(modelItem => estado.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => municipio.C_Municipio) | @Html.DisplayFor(modelItem => municipio.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => localidad.C_Localidad) | @Html.DisplayFor(modelItem => localidad.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDColonia)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDOrigen }, new { @class = "btn btn-success btn-xs" })
                @Html.ActionLink("Detalles", "Details", new { id = item.IDOrigen }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IDOrigen }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>


@*Paginación*@
@using (Html.BeginForm("Index", "DomicilioOrigen", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("Index", new
       {
           page,
           sortOrder = ViewBag.CurrentSort,
           currentFilter = ViewBag.CurrentFilter,
           searchString = ViewBag.CurrentFilter,
           pageSize = ViewBag.psize
       }))


    </div>
}
