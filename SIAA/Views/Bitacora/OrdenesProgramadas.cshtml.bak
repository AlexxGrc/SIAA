@using (Html.BeginForm("OrdenesProgramadas", "Bitacora", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("OrdenesProgramadas", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.SearchString,
       Maquina= ViewBag.Maquina,
       pageSize = ViewBag.psize,
       idorden = ViewBag.idorden,
       idproceso = ViewBag.idproceso
   }))


    </div>
}
