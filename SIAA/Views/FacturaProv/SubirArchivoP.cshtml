@model SIAAPI.Models.Cfdi.EncfacturaProv

@{
    ViewBag.Title = "Subir Archivo PDF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Proveedor @ViewBag.Nombre  </h2>
<h3>Factura: @ViewBag.NoFactura</h3>
<h3>UUID de la factura: @ViewBag.UUID </h3>
<h3>Monto Total de la factura: @ViewBag.Total </h3>
<h2>Subir el archivo de tipo .pdf</h2>
<hr />
<hr />
<br />

@using (Html.BeginForm("SubirArchivoP", "FacturaProv", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="id" value="@ViewBag.id">
    <div class="form-horizontal">
        <h4>Indica el archivo a subir</h4>

        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="file">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Grabar" class="btn btn-success btn-xs">Cargar Archivo PDF</button> @*<input type="submit" value="Grabar"  />*@ | @Html.ActionLink("Regresar a la lista", "IndexP", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>
    <div>
        <h2 class="text-danger">@ViewBag.Mensajeerror</h2>
    </div>

}
