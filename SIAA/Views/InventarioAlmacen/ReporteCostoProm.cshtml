@model SIAAPI.Reportes.EncReporteAVG
@{
    ViewBag.Title = "ReporteCostoProm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Elige la familia</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

       

        <hr />
        <h4>Elige lo elementos para la generación del reporte: </h4>
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IDAlmacen, "Almacen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("idalmacen", ViewBag.idalmacen as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDAlmacen, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IDFamilia, "Familia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("idfamilia", ViewBag.idfamilia as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDFamilia, "", new { @class = "text-danger" })
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="Enviar" value="Generar reporte" class="btn btn-info btn-xs" />|
                <input type="submit" name="Enviar" value="Generar excel" class="btn btn-info btn-xs" />|

                @Html.ActionLink("Regresar a la lista", "Index", "InventarioAlmacen", new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>
}

