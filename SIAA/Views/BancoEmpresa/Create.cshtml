                @Html.DropDownList("IDEmpresa", ViewBag.datosEmpresa as IEnumerable<SelectListItem>,  htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDEmpresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.c_Banco.IDBanco, "IDBanco", htmlAttributes: new { @class = "control-label col-md-2" })
