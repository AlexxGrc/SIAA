@*Busqueda*@
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>

                @Html.ActionLink("Devolucion", "Index", new { sortOrder = ViewBag.DevolucionSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Fecha")
            </th>

            <th>

                @Html.ActionLink("Proveedor", "Index", new { sortOrder = ViewBag.ProveedorSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Almacen")
            </th>
            <th>
                @Html.Label("Moneda")
            </th>


            <th>
                @Html.Label("Subtotal")
            </th>
            <th>
                @Html.Label("IVA")
            </th>
            <th>
                @Html.Label("Total")
            </th>


            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            if (item.Status.Equals("Cancelado"))
            {
                <tr class="danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.IDDevolucion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.c_Moneda.Descripcion)
                    </td>


                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                        @Html.ActionLink("Detalles", "DetailsDevolucion", new { id = item.IDDevolucion }, new { @class = "btn btn-default btn-xs" })
                        @*@if (item.Status.Equals("Activo"))
                            {
                                    @Html.ActionLink("Cancelar", "CancelarDevolucion", new { id = item.IDDevolucion }, new { @class = "btn btn-danger btn-xs" })
                                }*@

                        @Html.ActionLink("PDF", "PdfRequisicion", new { id = item.IDDevolucion }, new { @class = "btn btn-primary btn-xs" })

                    </td>
                </tr>
            }
            else
            {
                <tr>
                    @if (item.Status.Equals("Activo"))
                    {
                        <td class="success">
                            @Html.DisplayFor(modelItem => item.IDDevolucion)
                        </td>
                    }
                    else if (item.Status.Equals("Devuelto"))
                    {
                        <td class="warning">
                            @Html.DisplayFor(modelItem => item.IDDevolucion)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen.Descripcion)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.c_Moneda.Descripcion)
                    </td>


                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                        @Html.ActionLink("Detalles", "DetailsDevolucion", new { id = item.IDDevolucion }, new { @class = "btn btn-default btn-xs" })


                        @Html.ActionLink("PDF", "PdfDevolucion", new { id = item.IDDevolucion }, new { @class = "btn btn-primary btn-xs" })
                        @if (item.Status.Equals("Activo"))
                        {
                            @Html.ActionLink("Cancelar", "CancelarDevolucion", new { id = item.IDDevolucion }, new { @class = "btn btn-danger btn-xs" })

                        }

                    </td>
                </tr>
            }
        }

    </table>
</div>
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th class="col-lg-1">
                Moneda Origen
            </th>
            <th class="col-lg-1">
                Subtotal
            </th>
            <th class="col-lg-1">
                IVA
            </th>
            <th class="col-lg-1">
                Total
            </th>
            <th class="col-lg-1">
                Total en Pesos Mexicanos
            </th>
        </tr>
        @foreach (var itemresumen in ViewBag.sumatoria)
        {

            <tr>
                <td class="col-lg-1">
                    @itemresumen.MonedaOrigen
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.Subtotal)
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.IVA)
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.Total)
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.TotalenPesos)
                </td>

            </tr>
        }
    </table>
</div>
<br />
@*Paginación*@
@using (Html.BeginForm("IndexDevolucion", "EncRecepcion", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("IndexDevolucion", new
           {
               page,
               sortOrder = ViewBag.CurrentSort,
               currentFilter = ViewBag.CurrentFilter,
               searchString = ViewBag.CurrentFilter,
               pageSize = ViewBag.psize
           }))

    </div>
}
