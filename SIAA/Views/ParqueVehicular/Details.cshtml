                        <th>Clave Municipio</th>
                        <th>Municipio</th>
                        <th>Clave Localidad</th>
                        <th>Localidad</th>
                        <th>Clave Colonia</th>
                        <th>Colonia</th>
                        <th>CP</th>
                        <th>Referencia</th>
                    </tr>
                </thead>

                @foreach (var itemA in ViewBag.Arrendatario)
                {
                    <tr>
                        <td>@itemA.c_Pais</td>
                        <td>@itemA.c_Estado</td>
                        <td>@itemA.c_Municipio</td>
                        <td>@itemA.Municipio</td>
                        <td>@itemA.c_Localidad</td>
                        <td>@itemA.Localidad</td>
                        <td>@itemA.c_Colonia</td>
                        <td>@itemA.Colonia</td>
                        <td>@itemA.CP</td>
                        <td>@itemA.Referencia</td>
                    </tr>

                }

            </table>
        </div>
    }
}

