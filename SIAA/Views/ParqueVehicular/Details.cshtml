@*Arrendatario*@

@if(Model.EsArrendado != false)
{ 
    if (@ViewBag.Arrendatario != null)
    {
        <div class="table-responsive">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <h3>
                            Arrendatario
                        </h3>
                    <tr>
                        <th>RFC</th>
                        <th>Nombre</th>
                        <th>No. de Reg Tributario </th>
                        <th>Calle</th>
                        <th>No. Ext</th>
                        <th>No. Int</th>
                    </tr>
                </thead>

                @foreach (var itemA in ViewBag.Arrendatario)
                {
                    <tr>
                        <td>@itemA.RFCArrendatario</td>
                        <td>@itemA.NombreArrendatario </td>
                        <td>@itemA.NumRegIdTribArrendatario</td>
                        <td>@itemA.Calle</td>
                        <td>@itemA.NumExt</td>
                        <td>@itemA.NumInt</td>
                    </tr>
                    <tr>
                        @Html.ActionLink("Desasignar", "QuitarA", new { id = Model.IDParqueV }, new { @class = "btn btn-danger btn-xs" })
                    </tr>
                }

            </table>
        </div>
    }
}

@if (Model.EsArrendado != false)
{
    if (@ViewBag.Arrendatario != null)
    {
        <div class="table-responsive">
            <table class="table table-responsive">
                <thead>
                    <tr>

                    <tr>
