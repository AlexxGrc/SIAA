
@{
    ViewBag.Title = "IndicadoresDoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="col-xs-4 col-md-3">
                        <img src="~/imagenes/logoclass.jpg" width="200" height="100" />
                    </div>
                    <div class="col-xs-8 col-md-9">
                        <p style="font-size: xx-large" class="text-left">Class Labels S. de R.L. de C.V.</p>
                    </div>
                </div>
            </div>
            <hr />


            <div class="container">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-industry fa-5x fa-fw"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge"> <p class="text-left">@ViewBag.Departamento</p></div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>



        </div>

        <div class="tab-content" id="tabs">

            <table class="table">
                
                @foreach (var item in ViewBag.IndicadorMes)
                {
                    bool existe = false;
                    string cc = "select*from IndicadoresSGC where idmes= " + ViewBag.IDMes + " and ano=" + item.Ano;
                    SIAAPI.Models.miempresa.IndicadoresSGC indicadores = new SIAAPI.Models.miempresa.DoctoSGCAddContext().Database.SqlQuery<SIAAPI.Models.miempresa.IndicadoresSGC>(cc).FirstOrDefault();

                    if (indicadores != null)
                    {
                        existe = true;
                    }
                    if (existe== true)
                    {
                <tr>
                    <td>
                        <a href="@Url.Action("IndicadoresDocAn","MiEmpresa", new { an=item.Ano, IDMes=ViewBag.IDMes})">


                            <button id="close" class="closing">
                                <img height="70" width="70" src="~/imagenes/folder.png" />
                                <br />
                                @item.Ano
                            </button>
                        </a>
                    </td>


                </tr>
                }
                    
                }

            </table>



        </div>
    


