@model IEnumerable<SIAAPI.Models.miempresa.IndicadoresSGC>

@{
    ViewBag.Title = "IndicadoresDoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-8 col-md-12">
            <div class="col-xs-4 col-md-3">
                <img src="~/imagenes/logoclass.jpg" width="200" height="100" />
            </div>
            <div class="col-xs-8 col-md-9">
                <p style="font-size: xx-large" class="text-left">Class Labels S. de R.L. de C.V.</p>
            </div>
        </div>
    </div>
    <hr />


    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-industry fa-5x fa-fw"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"> <p class="text-left">@ViewBag.Departamento</p></div>

                    </div>
                </div>
            </div>


        </div>
    </div>



</div>
@{ @*if (ViewBag.Usuario == 1625 || ViewBag.Usuario == 23)
    {*@
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        @using (Html.BeginForm())
                        {
                            <div class="col-xs-20">
                                <input value="@ViewBag.an" id="an" name="an" type="hidden" />
                                <input value="@ViewBag.idmes" id="IDMes" name="IDMes" type="hidden" />
                                 Departamento: @Html.DropDownList("Proceso", "")
                                @* Enlistar: @Html.DropDownList("Enlistar", "Todos")*@
                                <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>


                            </div>


                        }

                    </div>

                </form>
            </div>
        </nav>
    @*}*@
}


<div class="tab-content" id="tabs">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>

            <th>
                @Html.Label("Departamento")
            </th>


            <th>
                @Html.Label("Fecha")
            </th>
            <th></th>
        </tr>
        @foreach (SIAAPI.Models.miempresa.IndicadoresSGC item in ViewBag.IndicadorMes)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Documento, "DescargarPDFIndicador", new { id = item.IDIndicadoresSGC }, new { @class = "btn btn-primary btn-xs" })

                </td>

                @{
                    SIAAPI.Models.miempresa.Departamentos departamentos = new SIAAPI.Models.miempresa.DepartamentosContext().Departamentos.Find(item.IDDepartamento);
                    <th>
                        @Html.DisplayFor(modelItem => departamentos.Nombre)
                    </th>

                }
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>

                    @Html.ActionLink(".", "EliminarArchivoIndicador", new { id = item.IDIndicadoresSGC }, new { @class = "fa fa-times-circle", style = "font-size:20px;color:red" })

                </td>

            </tr>
        }

    </table>



</div>

