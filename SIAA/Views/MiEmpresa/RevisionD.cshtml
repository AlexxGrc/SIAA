@*@model IEnumerable<SIAAPI.Models.Comercial.Almacen>*@

@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>
@model PagedList.IPagedList<SIAAPI.Models.miempresa.RevisionD>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
    ViewBag.Title = "RevisionD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Revisión de Dirección</h2>

<div>
    <div class="row">
        <div class="col-lg-8 col-md-12">
            <div class="col-xs-4 col-md-3">
                <img src="~/imagenes/logoclass.jpg" width="200" height="100" />
            </div>
            <div class="col-xs-8 col-md-9">
                <p style="font-size: xx-large" class="text-left">Class Labels S. de R.L. de C.V.</p>
            </div>
        </div>
    </div>
    <hr />


    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-industry fa-5x fa-fw"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"> <p class="text-left">@ViewBag.Departamento</p></div>

                    </div>
                </div>
            </div>


        </div>
    </div>
    @using (Html.BeginForm())
    {
       <div class="col-xs-20">

        Trimestre: @Html.DropDownList("Trimestres")
        
        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
       </div>
  
      

    }

</div>
<div class="tab-content" id="tabs">

    <table class="table">
        <tr>
            <td>
                <a href="@Url.Action("SubirArchivoRevision","MiEmpresa", new { viene="PrimerTrimestre"})">

                    <button id="close" class="closing">
                        <img height="70" width="70" src="~/imagenes/folder.png" />
                        <br />
                        Primer Trimestre
                    </button>
                </a>

            </td>
            <td>
                <a href="@Url.Action("SubirArchivoRevision","MiEmpresa", new { viene="SegundoTrimestre"})">

                    <button id="close" class="closing">
                        <img height="70" width="70" src="~/imagenes/folder.png" />
                        <br />
                        Segundo Trimestre
                    </button>
                </a>

            </td>
            <td>
                <a href="@Url.Action("SubirArchivoRevision","MiEmpresa", new { viene="TercerTrimestre"})">

                    <button id="close" class="closing">
                        <img height="70" width="70" src="~/imagenes/folder.png" />
                        <br />
                        Tercer Trimestre
                    </button>
                </a>
            </td>
            <td>
                <a href="@Url.Action("SubirArchivoRevision","MiEmpresa", new { viene="CuartoTrimestre"})">

                    <button id="close" class="closing">
                        <img height="70" width="70" src="~/imagenes/folder.png" />
                        <br />
                        Cuarto Trimestre
                    </button>
                </a>
            </td>

        </tr>

    </table>



</div>
@{ if (ViewBag.Viene != "")
    {
        <div class="table-responsive">
            <table class="table table-striped" width="50">
                <tr>
                    <th>
                        @* @Html.DisplayNameFor(model => model.CodAlm)*@

                        @Html.ActionLink("No.Rev", "Index", new { sortOrder = ViewBag.ASortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @*  @Html.DisplayNameFor(model => model.Descripcion)*@

                        @Html.ActionLink("Documento", "Index", new { sortOrder = ViewBag.BSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>

                    <th>
                        @*  @Html.DisplayNameFor(model => model.Telefono)*@
                        @Html.Label("Fecha")
                    </th>


                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDRevision)
                        </td>
                        <td>
                            @Html.ActionLink(item.Documento, "DescargarPDFRevisicion", new { id = item.IDRevision }, new { @class = "btn btn-primary btn-xs" })

                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>


                        <td>


                            @Html.ActionLink(".", "EliminarArchivoRevision", new { id = item.IDRevision }, new { @class = "fa fa-times-circle", style = "font-size:20px;color:red" })

                        </td>

                    </tr>
                }

            </table>
        </div>
        @*Paginación*@
        using (Html.BeginForm("RevisionD", "miempresa", FormMethod.Get, new { id = "pageSizeForm" }))
        {
            <div class="pager">
                Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

                @Model.Count de @Model.TotalItemCount elementos

                @Html.PagedListPager(Model, page => Url.Action("RevisionD", new
               {
                   page,
                   sortOrder = ViewBag.CurrentSort,
                   currentFilter = ViewBag.CurrentFilter,
                   searchString = ViewBag.CurrentFilter,
                   pageSize = ViewBag.psize
               }))


            </div>
        }
        @*Paginación*@

    }
}


