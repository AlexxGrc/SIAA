@model SIAAPI.Models.miempresa.RolDepto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4> Crear un Departamento vs Rol</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.IDDepartamento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.IDDepartamento, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownList("IDDepartamento", ViewBag.IDDepartamento as List<SelectListItem>, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDDepartamento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDRol, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.IDRol, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownList("IDRol", ViewBag.IDRol as List<SelectListItem>, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDRol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Grabar" class="btn btn-success btn-xs" /> | @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
                </div>
            </div>
        </div>
}

