@model PagedList.IPagedList<SIAAPI.Models.PlaneacionProduccion.VHEspCte>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
    ViewBag.Title = "IndexHE";
    Layout = "~/Views/Shared/_LayoutPlaneacion.cshtml";
}

<h3>Lista de Hoja de Especificaciones</h3>
<hr />

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <p>

                        Elementos por página: @Html.DropDownList("pageSize")  |
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
                      <a class="btn btn-info btn-xs" href="@Url.Action("Reporte")">Descargar Catálogo</a>
                        <a class="btn btn-info btn-xs" href="@Url.Action("CreaReporteporfecha")">Descargar Catalogo de Fecha</a>
                         <a class="btn btn-info btn-xs" href="@Url.Action("CreaReporteporModelo")">Descargar Catalogo por Modelo de Producción</a>
                        <a class="btn btn-info btn-xs" href="@Url.Action("CreaReporteporFamilia")">Descargar Catalogo por Familia</a>
           
                    </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@


@*Tabla de datos*@
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>
                Fecha
            </th>

            <th>
                Planeación
            </th>
            <th>
                Versión

            </th>
            <th>
                @Html.ActionLink("Nombre", "Index", new { sortOrder = ViewBag.NombreSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.ActionLink("TipoCliente", "Index", new { sortOrder = ViewBag.TipoClienteSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>

                @Html.ActionLink("Familia", "Index", new { sortOrder = ViewBag.FamiliaSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.DescripcionSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.ActionLink("Presentación", "Index", new { sortOrder = ViewBag.PresentacionSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.ActionLink("Artículo", "Index", new { sortOrder = ViewBag.ArticuloSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.ActionLink("ModeloProducción", "Index", new { sortOrder = ViewBag.ModeloProduccionSortParmm, currentFilter = ViewBag.CurrentFilter })

            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEspecificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Planeacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Familia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Presentacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Articulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModeloProduccion)
                </td>
                <td>
@{
                    @Html.ActionLink("Nueva Versión", "ClonarHE", new { id = item.IDHE }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.IDHE }, new { @class = "btn btn-default btn-xs" })


    SIAAPI.Models.PlaneacionProduccion.HEspecificacionContext dbHE = new SIAAPI.Models.PlaneacionProduccion.HEspecificacionContext();
    SIAAPI.Models.PlaneacionProduccion.HEspecificacion hespecificacion = dbHE.HEspecificaciones.Find(item.IDHE);
    SIAAPI.Models.Comercial.ClsDatoEntero idmp = dbHE.Database.SqlQuery<SIAAPI.Models.Comercial.ClsDatoEntero>("select IDModeloProduccion as Dato from HEspecificacion where IDHE='" + item.IDHE + "'").ToList()[0];
    if (idmp.Dato == 0)
    {
        <button type="button" name="button" class="btn btn-warning btn-xs" onclick=ADDModelo(@item.IDHE)>Modelo Producción</button>
    }
    else
    {
        @*<button type="button" name="button" class="btn btn-warning btn-xs" onclick=ADDModelo(@item.IDHE)>Editar Modelo Producción</button>*@
        @Html.ActionLink("Seleccionar", "Seleccionar", new { id = item.IDHE }, new { @class = "btn btn-primary btn-xs" })
        if (hespecificacion.IDCaracteristica != 0 && hespecificacion.IDCliente != 0)
        {
            @Html.ActionLink("Asignar Planeación", "AsignarP", new { id = item.IDHE }, new { @class = "btn btn-info btn-xs" })
        }
    }





    if (item.Articulo.Equals("Nuevo"))
    {
                        <button type="button" name="button" class="btn btn-danger btn-xs" onclick="Vermodal(@item.IDHE)">Registar Artículo</button>
                    }
                    }
                </td>

            </tr>

                        }

    </table>
</div>
<div class="modal fade" id="ModeloP" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="testeModeloP"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" id="ModalAA" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div id="teste"></div>
                        </div>
                    </div>
                </div>
            </div>

            @*Paginación*@
            @using (Html.BeginForm("IndexHE", "PlanPlaneacionProduccion", FormMethod.Get, new { id = "pageSizeForm" }))
            {
                <div class="pager">
                    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

                    @Model.Count de @Model.TotalItemCount elementos

                    @Html.PagedListPager(Model, page => Url.Action("IndexHE", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize
   }))


                </div>
            }
            @*Paginación*@
            <script src="~/Scripts/libs/jquery_1.10.2/jquery-1.10.2.min.js"></script>
         

            <script>
                function Vermodal(valor) {

                    $("#teste").load("/PlanPlaneacionProduccion/AgregaArticulo/" + valor, function () {
                        $('#ModalAA').modal("show");
                    });

                }
            </script>

         

<script>
    function ADDModelo(id) {
        $("#testeModeloP").load("/PlanPlaneacionProduccion/AgregarModelo/" + id, function () {
            $('#ModeloP').modal("show");
        });
                }
</script>


