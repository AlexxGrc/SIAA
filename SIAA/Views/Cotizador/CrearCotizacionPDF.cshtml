@model SIAAPI.Models.Cotizador.ClientePDF

@{
    ViewBag.Title = "CrearCotizacionPDF";
}

<h2>Crear PDF de la Cotizacion </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.mensajedeerror</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Empresa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Empresa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Empresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDVendedor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownList("IDVendedor", null, new { @class = "control-label col-md-3" })
                @Html.ValidationMessageFor(model => model.IDVendedor, "", new { @class = "text-danger" })
            </div>
        </div>

 
            @Html.HiddenFor(model => model.IDCotizacion, htmlAttributes: new { @class = "control-label col-md-2" })
           


   

        <br />

        @try
        {
          
          
                <h1> Precios a cotizar USD</h1>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Cantidades</th>
                            <th><div style="font-size:large"><input type="checkbox" name="precio1" value="checked" checked="checked">@ViewBag.Cantidad1 Millares</div></th>
                            <th><div style="font-size:large"><input type="checkbox" name="precio2" value="checked" checked="checked">@ViewBag.Cantidad2 Millares</div></th>
                            <th><div style="font-size:large"><input type="checkbox" name="precio3" value="checked" checked="checked">@ViewBag.Cantidad3 Millares</div></th>
                            <th><div style="font-size:large"><input type="checkbox" name="precio4" value="checked" checked="checked">@ViewBag.Cantidad4 Millares</div></th>
                        </tr>


                        <tr>
                            <td>
                                <div class="form-group">
                                    Precios
                                </div>

                            </td>
                            <td>
                                <div class="form-group">

                                    <label for="precioconvenido1" style="font-size:large" >@ViewBag.precio1 </label>  
                                </div>

                            </td>
                            <td>
                                <div class="form-group">

                                    <label for="precioconvenido1" style="font-size:large">@ViewBag.precio2  </label>  
                                </div>
                            </td>
                            <td>
                                <div class="form-group">

                                    <label for="precioconvenido1" style="font-size:large">@ViewBag.precio3  </label>  
                                </div>
                            </td>
                            <td>
                                <div class="form-group">

                                    <label for="precioconvenido1" style="font-size:large">@ViewBag.precio4  </label>  
                                </div>
                            </td>
                        </tr>




                </table>
            
                    //}
                }
                catch (Exception err2)
                {
                    string mensajederror2 = err2.Message;
                }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}
