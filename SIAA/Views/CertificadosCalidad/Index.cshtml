@*@model IEnumerable<SIAAPI.Models.Comercial.AQLCalidad>*@

@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>
@model PagedList.IPagedList<SIAAPI.Models.Calidad.CertificadoCalidad>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Cerificados</h3>
<hr />

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <p>
                        @Html.ActionLink("Crea un nuevo certificado", "Create", null, new { @class = "btn btn-warning btn-xs" })|
                        Elementos por página: @Html.DropDownList("PageSize")  |
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
                        
                    </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@


<table class="table">
    <tr>
        <th>
            @Html.Label("Fecha")
        </th>
        <th>
            @Html.Label("Cliente")
        </th>
        <th>
            @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.DescripcionSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.Label("Presentación")
        </th>
        <th>
            @Html.Label("Lote")
        </th>
        <th>
            @Html.Label("Cantidad")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        SIAAPI.Models.Comercial.Clientes cliente = new SIAAPI.Models.Comercial.ClientesContext().Clientes.Find(item.IDCliente);
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FechaCertificado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => cliente.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Presentacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lote)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cantidad)
    </td>
    <td>
        @Html.ActionLink("Certificado", "PdfCertificado", new { id = item.IDCertificado }, new { @class = "btn btn-primary btn-xs" })
        @Html.ActionLink("Editar Certificado", "EditarCalidad", "OrdenProduccion", new { IDCertificado = item.IDCertificado, page=1 }, new { @class = "btn btn-primary btn-xs" })

    </td>
    @*<td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IDCertificado }, new { @class = "btn btn-success btn-xs" })
            @Html.ActionLink("Detalles", "Details", new { id = item.IDAQL }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IDAQL }, new { @class = "btn btn-danger btn-xs" })
        </td>*@
</tr>
    }

</table>
@*Paginación*@
@using (Html.BeginForm("Index", "Muestreo", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize
   }))


    </div>
}
@*Paginación*@