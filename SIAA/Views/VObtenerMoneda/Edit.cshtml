@model SIAAPI.Models.Administracion.VObtenerMoneda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Editar Tipo de Cambio</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTipoCambio)

        <div class="form-group">
            @Html.LabelFor(model => model.FechaTC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FechaTC, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = false })
                @*@Html.EditorFor(model => model.FechaTC, new { htmlAttributes = new { @class = "form-control", @Value = Model.FechaTC.ToString("0:dd / MM / yyyy") } })*@
                @Html.ValidationMessageFor(model => model.FechaTC, "", new { @class = "text-danger" })
            </div>
        </div>


      
        <div class="form-group">
            @Html.LabelFor(model => model.IDMonedaOrigen,"Moneda Origen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDMonedaOrigen, ViewBag.Moneda as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDMonedaOrigen, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.IDMonedaDestino,"Moneda Destino", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDMonedaDestino, ViewBag.Moneda as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDMonedaDestino, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-success btn-xs" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>
}

<div>
    <h2 class="text-danger">@ViewBag.Mensaje</h2>
</div>

