@*Busqueda*@

<p>
    @Html.ActionLink("Crea un nueva cotización", "Create", null, new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            Cotizacion
        </th>
        <th>
            Fecha
        </th>
        <th>
            Cliente Prospecto
        </th>
        <th>
            Subtotal
        </th>
        <th>
            Iva
        </th>
        <th>
            Total
        </th>
        <th>
            Moneda
        </th>
        <th></th>
    </tr>

    @foreach (SIAAPI.Models.Comercial.VCotizacionesPros item in Model)
    {
        string clase = "default";
        if (item.Estado == "Cancelada")
        {
            clase = "danger";
        }
        <tr class="@clase">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
                <br />
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IVA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveMoneda)
            </td>
            <td>
                @Html.ActionLink("PDF", "DescargarPDF", new { id = item.ID }, new { @class = "btn btn-info  btn-xs" })
                @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn btn-default  btn-xs" })

                @if (item.Estado != "Cancelada")
                {
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-warning  btn-xs " })

                    @Html.ActionLink("Cancelar", "Cancelar", new { id = item.ID }, new { @class = "btn btn-danger  btn-xs" })
                }
            </td>
        </tr>
    }

</table>


@*Paginación*@
@using (Html.BeginForm("Index", "Cotizaprospecto", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize,
       Divisa = ViewBag.Divisaseleccionada,
       Status = ViewBag.Estadoseleccionado,
       ClieFac = ViewBag.Clienteseleccionado,
       Oficina = ViewBag.OficinaSeleccionada,
       Vendedor = ViewBag.VendedorSeleccionado
   }))

    </div>
}
@*Paginación*@
<script src="~/Scripts/libs/salert/sweetalert.min.js"></script>
