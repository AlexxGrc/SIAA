@*@model IEnumerable<SIAAPI.Models.Produccion.Proceso>*@

@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>
@model PagedList.IPagedList<SIAAPI.Models.Produccion.Proceso>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Lista de Procesos</h3>
<hr />

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <p>
                        @Html.ActionLink("Crea un nuevo registro", "Create", null, new { @class = "btn btn-primary navbar-btn btn-xs" })|
                        Elementos por página: @Html.DropDownList("pageSize")  |
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
                        </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@
<div class="table-responsive">
    <table class="table table-striped" width="50">


        <tr>

            <th>
                @Html.ActionLink("Proceso", "Index", new { sortOrder = ViewBag.NombreProcesoSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Usa máquina")
                @*@Html.DisplayNameFor(model => model.UsaMaquina)*@
            </th>
            <th>
                @Html.Label("Usa herramienta")
                @*@Html.DisplayNameFor(model => model.UsaHerramientas)*@
            </th>
            <th>
                @Html.Label("Usa insumos")
                @*@Html.DisplayNameFor(model => model.UsaInsumos)*@
            </th>
            <th>
                @Html.Label("Usa Documentos")
                @*@Html.DisplayNameFor(model => model.UsaDocumentos)*@
            </th>
            <th>
                @Html.Label("Usa mano de obra")
                @*@Html.DisplayNameFor(model => model.UsaManoDeObra)*@
            </th>
            <th>
                @Html.Label("Usa bitacora de trabajo")
                @*@Html.DisplayNameFor(model => model.UsaBitacoraDeTrabajo)*@
            </th>
            <th>
                @Html.Label("Liga orden de compra")
                @*@Html.DisplayNameFor(model => model.LigarOrdenDeCompra)*@
            </th>
            <th>
                @Html.Label("Solicita lote")
                @*@Html.DisplayNameFor(model => model.SolicitaLote)*@
            </th>
            <th>
                @Html.Label("Proceso antecedente")
                @*@Html.DisplayNameFor(model => model.ProcesoAntecedente)*@
            </th>
            <th>
                @Html.Label("Proceso padre")
                @*@Html.DisplayNameFor(model => model.ProcesoPadre)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaMaquina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaHerramientas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaInsumos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaDocumentos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaManoDeObra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaBitacoraDeTrabajo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LigarOrdenDeCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SolicitaLote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProcesoAntecedente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProcesoPadre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IDProceso }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.IDProceso }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IDProceso }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }

    </table>
    </div>
    @*Paginación*@
    @using (Html.BeginForm("Index", "Proceso", FormMethod.Get, new { id = "pageSizeForm" }))
            {
        <div class="pager">
            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

            @Model.Count de @Model.TotalItemCount elementos

            @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize
   }))


        </div>
    }
    @*Paginación*@
