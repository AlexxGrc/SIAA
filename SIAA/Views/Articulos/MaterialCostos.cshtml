
@model PagedList.IPagedList<SIAAPI.Models.Comercial.Articulo>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
    ViewBag.Title = "MaterialCostos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <div>
                        <table>
                            <tr>

                                <td> Elementos por página: @Html.DropDownList("pageSize") | </td>
                            </tr>
                        </table>
                    </div>

                    <div>
                        Escribe parte del Articulo o de la referencia :
                        <input name="SearchString" id="SearchString" value="@ViewBag.CurrentFilter" placeholder="Introduce el texto a buscar" onkeyup="Cambiabusqueda()" /> | <input type="submit" value="Visualizar articulos" class="btn btn-primary navbar-btn btn-xs" onfocus="Cambiabusqueda()" /><span class="sr-only">(current)</span>
                    </div>




                }
                <form method="post" action='@Url.Action("MaterialCostos", "Articulos", new { Clave= ViewBag.Clave })'>
                    <input type="hidden" name="Clave" id="Clave" value="" />
                    <div>Costo : <input type="number" step="any" name="Costo" id="Costo" placeholder="Introcude costo del material" /></div>


                    <input type="submit" value="Aplicar Costo" class="btn btn-primary navbar-btn btn-xs" />


                </form>

            </div>
        </form>
    </div>
</nav>
<br>

@*Busqueda*@

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.ActionLink("Clave", "Index", new { sortOrder = ViewBag.BSortParm, currentFilter = ViewBag.CurrentFilter })

        </th>
        <th>
            @Html.ActionLink("Descripción del producto", "Index", new { sortOrder = ViewBag.ASortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>@Html.Label("Precio Unitario")</th>
        <th>@Html.Label("Moneda")</th>
        <th>@Html.Label("Unidad de Medida")</th>
        <th>
            @Html.ActionLink("Familia", "Index", new { sortOrder = ViewBag.CSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>@Html.Label("Tipo de Articulo")</th>
        <th></th>

        <th></th>
    </tr>

    @foreach (SIAAPI.Models.Comercial.Articulo item in Model)
    {
        <tr>

            <td style="width:30px">
                @*   <a href="~/imagenes/Upload/@item.nameFoto" download="~/imagenes/Upload/@item.nameFoto" class="w3-hover-opacity"><img src="~/imagenes/Upload/@item.nameFoto" width="70" height="70"></a>*@
                @*<img src="~/imagenes/Upload/@item.nameFoto" alt="" width="70" height="70">*@

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cref)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            @{
                SIAAPI.Models.Comercial.MatrizCosto costo = new SIAAPI.Models.Comercial.ArticuloContext().MatrizCostos.Where(x => x.RangInf < 1 && 1 < x.RangSup && x.IDArticulo == item.IDArticulo).FirstOrDefault();
            }
            <td>
                <h3 class="text-success" style="text-align: right;">@costo.Precio</h3>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_Moneda.ClaveMoneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_ClaveUnidad.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Familia.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoArticulo.Descripcion)
            </td>



        </tr>
    }

</table>




@*Paginación*@
@using (Html.BeginForm("MaterialCostos", "Articulos", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos


        @Html.PagedListPager(Model, page => Url.Action("MaterialCostos", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize,
       Familia = ViewBag.Familia
   }))


    </div>
}
@*Paginación*@

<script>
    function Cambiabusqueda() {
        var valorclave = document.getElementById("SearchString").value;
        document.getElementById("Clave").value = valorclave;

    }
</script>

