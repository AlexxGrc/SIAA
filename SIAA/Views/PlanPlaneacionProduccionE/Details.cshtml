                                    <tr>
                                        <td>  <label class="text-info">@Atri :</label></td>
                                        <td> <input type="color" value="@Val"></td>
                                    </tr>
                                }
                                else
                                {
                                    throw new Exception(""); // crea la excepcion para imprimir una label y entra al catch
                                }
                            }
                            catch (Exception err)
                            {
                                <tr>
