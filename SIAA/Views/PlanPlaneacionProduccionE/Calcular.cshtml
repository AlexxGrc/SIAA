

@{
    ViewBag.Title = "Calcular";
    Layout = "~/Views/Shared/_LayoutPlaneacionE.cshtml";
}



<h3>Calcular</h3>


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <hr />
        <br>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="idhe" id="idhe" class="form-control" value="@ViewBag.idhe"/>
        <div class="row">
            <div class="col col-md-4 col-sm-1">
                <div class="form-group">
                    @Html.Label("Moneda", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.DropDownList("IDMoneda", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
         
            <div class="col col-md-4 col-sm-1">
                <div class="form-group">
                    @Html.Label("TC", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        <input type="text" name="TC" id="TC" class="form-control" />
                    </div>
                </div>

            </div>

        </div>

        <br><br>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calcular" class="btn btn-success btn-xs" />|@Html.ActionLink("Regresar a la lista", "IndexHE", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>

}


