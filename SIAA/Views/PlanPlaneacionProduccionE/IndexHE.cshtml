            <script>
                function Vermodal(valor) {

                    $("#teste").load("/PlanPlaneacionProduccionE/AgregaArticulo/" + valor, function () {
                        $('#ModalAA').modal("show");
                    });

                }
            </script>

        


<script>
    function ADDModelo(id) {
        $("#testeModeloP").load("/PlanPlaneacionProduccionE/AgregarModelo/" + id, function () {
            $('#ModeloP').modal("show");
        });
                }
</script>


