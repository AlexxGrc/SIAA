@*Busqueda*@
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>

                @Html.ActionLink("Orden de Compra", "IndexP", new { sortOrder = ViewBag.OrdenCompraSortParm, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Fecha")
            </th>
            <th>
                @Html.Label("Fecha requerida")
            </th>

            <th>
                @Html.Label("Forma de Pago")
            </th>

            <th>
                @Html.Label("Método de Pago")
            </th>

            <th>
                @Html.Label("Condiciones de Pago")
            </th>
            <th>
                @Html.Label("Divisa")
            </th>
            <th>
                @Html.Label("Tipo de Cambio")
            </th>

            <th>
                @Html.Label("Subtotal")
            </th>
            <th>
                @Html.Label("IVA")
            </th>
            <th>
                @Html.Label("Total")
            </th>
            <th>
                @Html.Label("Estado")
            </th>


            <th></th>
        </tr>


        @foreach (var item in Model)
        {

                <tr>

                    @if (item.Status.Equals("Activo"))
                    {
                        <td class="success">
                            @Html.DisplayFor(modelItem => item.IDOrdenCompra)
                        </td>
                    }
                    @*else if (item.Status.Equals("Inactivo"))
                    {
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.IDOrdenCompra)
                        </td>
                    }*@
                    else if (item.Status.Equals("Recepcionado"))
                    {
                        <td class="warning">
                            @Html.DisplayFor(modelItem => item.IDOrdenCompra)
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    else if (item.Status.Equals("Finalizado"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.IDOrdenCompra)
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRequerida)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Empresa)
                    </td>*@
                    

                    <td>
                        @Html.DisplayFor(modelItem => item.Formapago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetodoPago)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CondicionesPago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moneda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCambio)
                    </td>

                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>


                    <td>
                        @Html.ActionLink("Detalles", "DetailsP", new { id = item.IDOrdenCompra }, new { @class = "btn btn-default btn-xs" })


                        @Html.ActionLink("PDF", "PdfOrdenCompra", new { id = item.IDOrdenCompra }, new { @class = "btn btn-primary btn-xs" })


                        @Html.ActionLink("Cargar Factura", "CreatedesdeArchivoP", "FacturaProv", new { id = item.IDOrdenCompra }, new { @class = "btn btn-warning btn-xs" })


                    </td>
                </tr>
           
        }


    </table>
    </div>
    <div class="table-responsive">
        <table class="table table-striped" width="50">
            <tr>
                <th class="col-lg-1">
                    Moneda Origen
                </th>
                <th class="col-lg-1">
                    Subtotal
                </th>
                <th class="col-lg-1">
                    IVA
                </th>
                <th class="col-lg-1">
                    Total
                </th>
                <th class="col-lg-1">
                    Total en Pesos Mexicanos
                </th>
            </tr>
            @foreach (var itemresumen in ViewBag.sumatoria)
            {

                <tr>
                    <td class="col-lg-1">
                        @itemresumen.MonedaOrigen
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.Subtotal)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.IVA)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.Total)
                    </td>
                    <td class="col-lg-1">
                        @String.Format("{0:C}", itemresumen.TotalenPesos)
                    </td>

                </tr>
            }
        </table>
    </div>
    <br />
    @*Paginación*@
    @using (Html.BeginForm("IndexP", "EncOrdenCompra", FormMethod.Get, new { id = "pageSizeForm" }))
            {
        <div class="pager">
            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

            @Model.Count de @Model.TotalItemCount elementos

            @Html.PagedListPager(Model, page => Url.Action("IndexP", new
       {
           page,
           sortOrder = ViewBag.CurrentSort,
           currentFilter = ViewBag.CurrentFilter,
           searchString = ViewBag.CurrentFilter,
           pageSize = ViewBag.psize,
           Divisa = ViewBag.Divisaseleccionado
       }))

        </div>
    }
