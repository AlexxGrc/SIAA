@model SIAAPI.Models.CartaPorte.c_Municipio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Editar Municipio</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
