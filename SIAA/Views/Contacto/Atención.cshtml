@model IEnumerable<SIAAPI.Models.Administracion.VMensajes>

@{
    ViewBag.Title = "VMensajes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mensajes Recibidos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Para)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RFC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mensaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atendido)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Para)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RFC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mensaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atendido)
        </td>

        <td>
            @if (item.Atendido == false)
            { @Html.ActionLink("Atención", "Atencion", new { id = item.IDContacto }) }
            @if (item.Atendido == true)
            { @Html.ActionLink("Detalles", "Details", new { id = item.IDContacto })  }

            @*@Html.ActionLink("Delete", "Delete", new { id=item.IDContacto })*@
        </td>
    </tr>
}

</table>
