@using PagedList.Mvc;
@model  PagedList.IPagedList<SIAAPI.Models.CartaPorte.c_CodigoTransporteAereo>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Transporte Aéreo</h3>

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <p>
                        @Html.ActionLink("Crear Transporte Aéreo", "Create", null, new { @class = "btn btn-warning btn-xs" })
                        Elementos por página: @Html.DropDownList("pageSize")  |
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>
                        <a class="btn btn-info btn-xs" href="@Url.Action("ListadoTransporte")">Descargar PDF</a>
                        <a class="btn btn-info btn-xs" href="@Url.Action("GenerarExcelTransporte")">Exportar a Excel</a>
                    </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>

@*Busqueda*@

@*Tabla de datos*@
<div class="table-responsive">
    <table class="table" table-striped" width="50">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Clave)*@
                @Html.ActionLink("Clave", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Nacionalidad)*@
                @Html.ActionLink("Nacionalidad", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Aerolinea)*@
                @Html.ActionLink("Aereolinea", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Designador)*@
                @Html.ActionLink("Designador", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.FIvigencia)*@
                @Html.ActionLink("FIvigencia", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.FFvigencia)*@
                @Html.ActionLink("FFvigencia", "Index", new { sortOrder = ViewBag.ClaveSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nacionalidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aerolinea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FIvigencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FFvigencia)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IDTransAereo }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.IDTransAereo }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IDTransAereo }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </table>
</div>
@*Paginación*@
@using (Html.BeginForm("Index", "c_CodigoTransporteAereo", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("Index", new
       {
           page,
           sortOrder = ViewBag.CurrentSort,
           currentFilter = ViewBag.CurrentFilter,
           searchString = ViewBag.CurrentFilter,
           pageSize = ViewBag.psize
       }))


    </div>
}
