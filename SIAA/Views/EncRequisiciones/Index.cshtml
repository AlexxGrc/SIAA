@*Busqueda*@
<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>

                @Html.ActionLink("Requisición", "Index", new { sortOrder = ViewBag.Requisicion, currentFilter = ViewBag.CurrentFilter })

            </th>
            <th>
                @Html.Label("Fecha")
            </th>
            <th>
                @Html.Label("Fecha requerida")
            </th>
            <th>

                @Html.ActionLink("Proveedor", "Index", new { sortOrder = ViewBag.EmpresaSortParm, currentFilter = ViewBag.Empresa })

            </th>
            <th>
                @Html.Label("Almacen")
            </th>
            @*<th>
                    @Html.Label("Forma de Pago")
                </th>

                <th>
                    @Html.Label("Método de Pago")
                </th>

                <th>
                    @Html.Label("Condiciones de Pago")
                </th>*@
            <td>
                @Html.Label("Doc Sig")
            </td>
            <th>
                @Html.Label("Divisa")
            </th>
            <th>
                @Html.Label("Tipo de Cambio")
            </th>

            <th>
                @Html.Label("Subtotal")
            </th>
            <th>
                @Html.Label("IVA")
            </th>
            <th>
                @Html.Label("Total")
            </th>


            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            if (item.Status.Equals("Cancelado"))
            {
                <tr class="danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.IDRequisicion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRequiere)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen)
                    </td>

                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaveMoneda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCambio)
                    </td>

                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })

                    </td>
                </tr>
            }
            else
            {
                <tr>
                    @if (item.Status.Equals("Activo"))
                    {
                        <td class="success">
                            @Html.DisplayFor(modelItem => item.IDRequisicion)
                        </td>
                    }
                    else if (item.Status.Equals("Inactivo"))
                    {
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.IDRequisicion)
                        </td>
                    }
                    else if (item.Status.Equals("Finalizado"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.IDRequisicion)
                        </td>
                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRequiere)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacen)
                    </td>

                    <td>
                        @{
                            SIAAPI.clasescfdi.ClsRastreaDA rastrea = new SIAAPI.clasescfdi.ClsRastreaDA();
                            List<SIAAPI.clasescfdi.NodoTrazo> nodos = rastrea.getDocumentoAnterior("OCompraRequi", item.IDRequisicion, "Encabezado");
                            <table>
                                @foreach (SIAAPI.clasescfdi.NodoTrazo nodo in nodos)
                                {
                                    <td style="font-size:x-small">
                                        @nodo.Descripcion
                                    </td>
                                }
                            </table>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaveMoneda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCambio)
                    </td>

                    <td align="right">
                        @String.Format("{0:C}", item.Subtotal)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.IVA)
                    </td>
                    <td align="right">
                        @String.Format("{0:C}", item.Total)
                    </td>



                    <td>
                        @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                        @Html.ActionLink("Detalles", "Details", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })
                        @*@Html.ActionLink("Eliminar", "Delete", new { id = item.IDRequisicion }, new { @class = "btn btn-danger btn-xs" })*@
                        @if (item.Status.Equals("Activo"))
                        {
                            @Html.ActionLink("Cancelar", "Cancelar", new { id = item.IDRequisicion }, new { @class = "btn btn-danger btn-xs" })
                        }
                        @Html.ActionLink("PDF", "PdfRequisicion", new { id = item.IDRequisicion }, new { @class = "btn btn-primary btn-xs" })


                        @if ((@Roles.IsUserInRole("Administrador") || (@Roles.IsUserInRole("Compras")) && item.Status.Equals("Activo")) && (item.IDProveedor != @ViewBag.IDproveedorDesconocido))
                        {
                            if (item.Status.Equals("Activo"))
                            {
                                @Html.ActionLink("Realizar Orden de Compra", "Requisiciones", "EncOrdenCompra", new { id = item.IDRequisicion }, new { @class = "btn btn-success btn-xs" })

                            }
                        }

                        @if (item.IDProveedor == @ViewBag.IDproveedorDesconocido)
                        {
                            if (item.Status.Equals("Activo"))
                            {
                                @Html.ActionLink("Realizar Orden de Compra", "Requisiciones", "EncOrdenCompra", new { id = item.IDRequisicion }, new { @class = "btn btn-success btn-xs" })

                            }
                        }

                    </td>
                </tr>
            }

        }


    </table>
</div>

<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th class="col-lg-1">
                Moneda Origen
            </th>
            <th class="col-lg-1">
                Subtotal
            </th>
            <th class="col-lg-1">
                IVA
            </th>
            <th class="col-lg-1">
                Total
            </th>
            <th class="col-lg-1">
                Total en Pesos Mexicanos
            </th>
        </tr>
        @foreach (var itemresumen in ViewBag.sumatoria)
        {

            <tr>
                <td class="col-lg-1">
                    @itemresumen.MonedaOrigen
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.Subtotal)
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.IVA)
                </td>
                <td class="col-lg-1">
                    @String.Format("{0:C}", itemresumen.Total)
                </td>

            </tr>
        }
    </table>
</div>

