@*@model IEnumerable<SIAAPI.Models.Comercial.EncRequisiones>*@

@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });

</script>
@model PagedList.IPagedList<SIAAPI.Models.Comercial.EncRequisiones>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@

@{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Lista de Requisiciones</h3>
<hr />

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <div>
                        @Html.ActionLink("Crea un nuevo registro", "Create", null, new { @class = "btn btn-default navbar-btn" })
                        Elementos por página: @Html.DropDownList("pageSize")
                        Divisa: @Html.DropDownList("Divisa")
                        Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                        <input type="submit" value="Aplicar" class="btn btn-default navbar-btn" /> <span class="sr-only">(current)</span>
                    </div>
                   
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@
<table class="table">
    <tr>
        <th>
@if (ViewBag.encu == null)
{
            @Html.ActionLink("Requisición", "Index", new { sortOrder = ViewBag.RequisicionSortParm, currentFilter = ViewBag.CurrentFilter })
}
else
{
    @Html.Label("Requisición")
}
        </th>
        <th>
            @Html.Label("Fecha")
        </th>
        <th>
            @Html.Label("Fecha requerida")
        </th>
        <th>
@if (ViewBag.encu == null)
{
            @Html.ActionLink("Proveedor", "Index", new { sortOrder = ViewBag.ProveedorSortParm, currentFilter = ViewBag.CurrentFilter })
}
else
{
    @Html.Label("Proveedor")
}
        </th>
        <th>
            @Html.Label("Almacen")
        </th>
        <th>
            @Html.Label("Forma de Pago")
        </th>

        <th>
            @Html.Label("Método de Pago")
        </th>
        <th>
            @Html.Label("Divisa")
        </th>
        <th>
            @Html.Label("Condiciones de Pago")
        </th>
        <th>
            @Html.Label("Tipo de Cambio")
        </th>

        <th>
            @Html.Label("Subtotal")
        </th>
        <th>
            @Html.Label("IVA")
        </th>
        <th>
            @Html.Label("Total")
        </th>
        <th></th>
    </tr>

    @if (ViewBag.encu == null)
    {

        foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDRequisicion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRequiere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedor.Empresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Almacen.Descripcion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.c_FormaPago.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_MetodoPago.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_Moneda.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CondicionesPago.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoCambio)
                </td>

                <td align="right">
                    @String.Format("{0:C}", item.Subtotal)
                </td>
                <td align="right">
                    @String.Format("{0:C}", item.IVA)
                </td>
                <td align="right">
                    @String.Format("{0:C}", item.Total)
                </td>
                <td>
                    @* @Html.ActionLink("Editar", "Edit", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })*@
                    @Html.ActionLink("Detalles", "Details", new { id = item.IDRequisicion }, new { @class = "btn btn-default btn-xs" })
                    @*@Html.ActionLink("Eliminar", "Delete", new { id = item.IDRequisicion }, new { @class = "btn btn-danger btn-xs" })*@

                    @Html.ActionLink("PDF", "PdfRequisicion", new { id = item.IDRequisicion }, new { @class = "btn btn-primary btn-xs" })

                </td>
            </tr>
        }
    }
    else
    {
   
            

               foreach (var item in ViewBag.encu)
                {
                    <tr>
                        <td>@item.IDRequisicion</td>
                        <td>@item.Fecha</td>
                        <td>@item.FechaRequiere</td>
                        <td>@item.Proveedor</td>
                        <td>@item.Almacen</td>
                        <td>@item.FormaPago</td>
                        <td>@item.MetodoPago</td>
                        <td>@item.Condiciones</td>
                        <td>@item.Divisa</td>
                        <td>@item.TipoCambio</td>
                        <td>@item.Subtotal</td>
                        <td>@item.IVA</td>
                        <td>@item.Total</td>
                        
                    </tr>
                }
                }
               
            </table>

            <div class="table-responsive">
                <table class="table table-striped" width="50">
                    <tr>

                        <th class="col-lg-1">
                            Subtotal
                        </th>
                        <th class="col-lg-1">
                            IVA
                        </th>
                        <th class="col-lg-1">
                            Total
                        </th>
                    </tr>

                    <tr>

                        <td class="col-lg-1">
                            @Html.Display("subtotal", (string)@ViewBag.Subtotal)
                        </td>
                        <td class="col-lg-1">
                            @Html.Display("iva", (string)@ViewBag.IVA)
                        </td>
                        <td class="col-lg-1">
                            @Html.Display("total", (string)@ViewBag.Total)
                        </td>

                    </tr>



                </table>
            </div>
            <br />
            @*Paginación*@
            @using (Html.BeginForm("Index", "EncRequisiones", FormMethod.Get, new { id = "pageSizeForm" }))
            {
                <div class="pager">
                    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

                    @Model.Count de @Model.TotalItemCount elementos

                    @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize
   }))

                </div>
            }
            @*Paginación*@
