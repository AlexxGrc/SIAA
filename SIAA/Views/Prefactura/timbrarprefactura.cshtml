@model SIAAPI.ViewModels.Comercial.VMFacDigital

@{
    ViewBag.Title = "timbrarprefactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Timbrar factura digital en la serie</h4>
        <hr />

        <div class="form-group">
            @Html.HiddenFor(model => model.Idprefacturafactura)
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.serie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* @Html.EditorFor(model => model.IDTipoComprobante, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.serie, ViewBag.listaserie as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.serie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear factura v3" class="btn btn-success" name="Version" id="Version" /> |   <input type="submit" value="Crear factura v4" class="btn btn-success" name="Version" id="Version" />
            </div>
          
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista de prefacturas", "Index")
</div>
