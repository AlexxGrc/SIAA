@*@model IEnumerable<SIAAPI.Models.Administracion.c_TipoComprobante>*@

@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>

@model PagedList.IPagedList<SIAAPI.Models.Administracion.c_TipoComprobante>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@


<h3>Lista de Tipos de comprobantes</h3>

@*Busqueda*@
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                <p>
                    @Html.ActionLink("Crea un nuevo registro", "Create", null, new { @class ="btn btn-primary navbar-btn btn-xs"}) |
                    Elementos por página: @Html.DropDownList("pageSize")  |
                    Filtro: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = " Introduce el texto a buscar:" })
                    <input type="submit" value="Aplicar" class="btn btn-primary btn-xs" /><span class="sr-only">(current)</span>

                    <a class="btn btn-info btn-xs" href="@Url.Action("ListadoTipoComprobante")">Descargar PDF</a>
                    <a class="btn btn-info btn-xs" href="@Url.Action("GenerarExcelTipoComprobante")">Descargar Excel</a>
                </p>
                }

            </div>
        </form>
    </div>
</nav>
<br>
@*Busqueda*@



<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>
            <th>
                @Html.ActionLink("Clave tipo de comprobante", "Index", new { sortOrder = ViewBag.C1SortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.C2SortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Valor Máximo
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaveTipoComprobante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorMaximo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IDTipoComprobante }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.IDTipoComprobante }, new { @class = "btn btn-default btn-xs" })
                </td>
            </tr>
        }

    </table>
    </div>

    @*Paginación*@
    @using (Html.BeginForm("Index", "c_TipoComprobante", FormMethod.Get, new { id = "pageSizeForm" }))
            {
        <div class="pager">
            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

            @Model.Count de @Model.TotalItemCount elementos

            @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize
   }))


        </div>
    }
    @*Paginación*@


