@model SIAAPI.Models.Cfdi.PagoFacturaProv

@{
    ViewBag.Title = "Registrar pago desde archivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Carga el pago de una factura de un proveedor desde un Xml</h3>
<hr />
<br />

@using (Html.BeginForm("CargarPagos", "PagoFacturaProveedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Para registrar el pago desde un archivo, indica el archivo a subir</h4>

        <div class="form-group">
            <div class="col-md-10">
                <input type="file" id="Imag1" name="Imag1" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-success btn-xs" /> | @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>

    <div>
        <h2 class="text-danger">@ViewBag.Mensajeerror</h2>
    </div>
}


