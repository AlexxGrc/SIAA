<h3>Cancelación del Pago</h3>
<hr />
@if (@ViewBag.detallesP != null)
{
    <div class="table-responsive">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Datos del pago
                    </th>
                    
                <tr>
                    <th>Fecha del Pago</th>
                    <th>Empresa</th>
                    <th>Monto</th>
                    <th>Divisa</th>
                    <th>UUID</th>
                </tr>
            </thead>

            @foreach (var item in ViewBag.detallesP)
                {
                <tr>
                    <td>@item.FechaPago</td>
                    <td>@item.Empresa </td>
                    <td>@item.Monto</td>
                    <td>@item.ClaveMoneda </td>
                    <td>@item.UUID </td>
                </tr>
            }

        </table>
    </div>
}

@model SIAAPI.Models.Cfdi.CancelaPagoProv
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <br />
        <h3>¿Está seguro de CANCELAR este registro?</h3>
        <p class="alert-danger">Esta operación Cancelará:
        <p class="alert-danger">el pago registrado,los documentos relacionados y actualizará los saldos de las facturas </p>
        <hr />
        <div class="col-md-10">
            @Html.HiddenFor(model => model.IDPagoFactura)
            <div class="form-group">
                @Html.LabelFor(model => model.Observacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cancelar" class="btn btn-danger btn-xs" />
            @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })


        </div>
    </div>

}

