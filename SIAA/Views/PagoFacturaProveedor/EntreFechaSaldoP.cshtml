
@model SIAAPI.Reportes.ReporteSaldoProveedor

@{
    ViewBag.Title = "EntreFechasSaldoP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Reporte de Saldos de Proveedor:</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <h4>Establecer los datos para la generación del reporte: </h4>
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.Fechafinal, new { htmlAttributes = new { type = "date", @class = "form-control" } })*@
                @Html.DropDownList("IDProveedor", ViewBag.proveedor as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.IDProveedor, "", new { @class = "text-danger" })*@
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="Enviar" value="Generar reporte" class="btn btn-info btn-xs" />|
                <input type="submit" name="Enviar" value="Generar excel" class="btn btn-info btn-xs" />|
            </div>
        </div>
    </div>
}


