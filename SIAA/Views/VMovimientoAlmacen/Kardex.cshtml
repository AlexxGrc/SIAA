@*@model IEnumerable<SIAAPI.Models.Inventarios.VMovimientoAlmacen>*@
@*Paginación*@
<script src="~/Scripts/jquery-3.2.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () { // Submit pageSizeForm when another pageSize value is selected
        $("#pageSize").change(function () {
            $("#pageSizeForm").submit();
        });
    });
</script>
@model PagedList.IPagedList<SIAAPI.Models.Inventarios.VMovimientoAlmacen>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*Paginación*@


@{
    ViewBag.Title = "Kardex de operaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kardex de Movimiento</h2>
<h4>@ViewBag.Articulo</h4>
<h3>Numero de presentación @ViewBag.IDPresentacion</h3>
<h3>@ViewBag.Caracteristica</h3>
@if (ViewBag.escinta == "SI")
{
    @Html.ActionLink("Lotes", "Lotes", new { IDCaracteristica = ViewBag.IDCaracteristica, IDArticulo = ViewBag.IDArticulo, IDAlmacen = ViewBag.IDAlmacen }, new { @class = "btn btn-warning btn-xs" })
}
@if (ViewBag.estinta == "SI")
{
    @Html.ActionLink("Lotes", "LotesTinta", new { IDCaracteristica = ViewBag.IDCaracteristica, IDArticulo = ViewBag.IDArticulo, IDAlmacen = ViewBag.IDAlmacen }, new { @class = "btn btn-warning btn-xs" })
}



<div class="table-responsive">
    <table class="table table-striped" width="50">
        <tr>

            <th>
                @Html.Label("Fecha Movimiento")
            </th>



            <th>
                @Html.Label("Lote")
            </th>
            <th>
                @Html.Label("Acciòn")
            </th>
            <th>
                @Html.Label("Documento")

            </th>
            <th>
                @Html.Label("No.Documento")

            </th>
            <th>
                @Html.Label("Tipo Operacion")

            </th>

            <th>
                @Html.Label("Cantidad")

            </th>
            <th>
                @Html.Label("Acumulado")

            </th>
            <th>
                @Html.Label("Observacion")

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <div>@Html.DisplayFor(modelItem => item.FechaMovimiento)</div>
                    <div>@Html.DisplayFor(modelItem => item.Hora)</div>
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Lote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoOperacion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acumulado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>

            </tr>
        }

    </table>
</div>
@*Paginación*@
@using (Html.BeginForm("Kardex", "VMovimientoAlmacen", FormMethod.Get, new { id = "pageSizeForm" }))
{
    <div class="pager">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount<br />

        @Model.Count de @Model.TotalItemCount elementos

        @Html.PagedListPager(Model, page => Url.Action("Kardex", new
   {
       page,
       sortOrder = ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter,
       searchString = ViewBag.CurrentFilter,
       pageSize = ViewBag.psize,
       IDArticulo = ViewBag.IDArticulo,
       IDAlmacen = ViewBag.IDAlmacen,
       IDCaracteristica = ViewBag.IDCaracteristica
       }))


    </div>
}
@*Paginación*@