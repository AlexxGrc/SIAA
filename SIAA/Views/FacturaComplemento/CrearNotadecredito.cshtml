@model SIAAPI.ViewModels.Cfdi.ViewNotaCredito


@{
    ViewBag.Title = "Crear Anticipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nota de Credito </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.IDFactura)
        @Html.HiddenFor(model => model.IDTipoRelacion)
        @Html.HiddenFor(model => model.IDUsoCFDI)
        @Html.HiddenFor(model => model.IDTipoComprobante)
        @Html.HiddenFor(model => model.Moneda)

        @Html.HiddenFor(model => model.nombre)
        @Html.HiddenFor(model => model.rfc)
        @Html.HiddenFor(model => model.uuid)

        <div class="form-group">
            <h2> @Html.DisplayFor(model => model.nombre)</h2>
            <h3>@Html.DisplayFor(model => model.rfc) </h3>
            <h4>@Html.DisplayFor(model => model.uuid) </h4>
        </div>
        @{
            if (ViewBag.MensajeSaldo == "")
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.IDFormaPago, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-6 col-sm-12">
                        @*    @Html.EditorFor(model => model.IDFormaPago, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.IDFormaPago, ViewBag.listaformapago as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDFormaPago, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.IDMetodoPago, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @* @Html.EditorFor(model => model.IDMetodoPago, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.IDMetodoPago, ViewBag.listametodopago as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDMetodoPago, "", new { @class = "text-danger" })
                    </div>
                </div>







                <div class="form-group">
                    @Html.LabelFor(model => model.serie, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @* @Html.EditorFor(model => model.IDTipoComprobante, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.serie, ViewBag.listaserie as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.serie, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Observacion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>
               

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Grabar" class="btn btn-success btn-xs" /> | @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
                    </div>
                </div>

            }
            else
            {
                <h3>
                    @ViewBag.MensajeSaldo
                </h3>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
                    </div>
                </div>
            }
        }


    </div>
}

