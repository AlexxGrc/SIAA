
@{
    ViewBag.Title = "Programar";
    Layout = "~/Views/Shared/_LayoutProduccion.cshtml";
}

@model SIAAPI.Models.Produccion.CambioEstado
@using (Html.BeginForm("Programar", "OrdenProduccion", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{


    <h4>Programar orden<br /></h4>
    <hr />
    <input type="hidden" class="form-control" name="orden" id="orden" value="@ViewBag.IDOrden">
    <div class="form-group">
        @Html.Label("Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            <input type="date" class="form-control" name="fecha" id="fecha">
        </div>
    </div>



    <div class="form-group">
        @Html.Label("Máquina", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-7">
            @Html.DropDownList("Maquina", (IEnumerable<SelectListItem>)ViewBag.Maquinas, null, htmlAttributes: new { @class = "form-control", @id = "Maquina" })

        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-success btn-xs" /> | @Html.ActionLink("Regresar a la lista", "Prioridad", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
        }


