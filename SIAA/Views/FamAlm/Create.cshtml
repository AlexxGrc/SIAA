@model SIAAPI.Models.Inventarios.FamAlm

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear nueva Asignación</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Familia por Almacen</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Familia", new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @*@Html.DropDownList("IDFamilia", ViewBag.idfamilia as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownList("IDFamilia")
                @Html.ValidationMessageFor(model => model.IDFamilia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Almacén", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDAlmacen")
                @*@Html.DropDownList("IDAlmacen", ViewBag.idalmacen as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.IDAlmacen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-success btn-xs" /> | @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-default btn-xs" })
            </div>
        </div>
    </div>
}
